<link rel="stylesheet" href="/css/styles.css">
<%- include('partials/header') %>
<div class="signinDiv">
  <div>
      <h2>Register</h2>
      <form class="signin" action="/register" method="POST">
        <div>
          <input type="text" id="name" name="name" placeholder="Name" required>
        </div>
        <div>
          <input type="email" id="email" name="email" placeholder="Email" required>
        </div>
        <div style="display: flex; align-items: center;">
          <input type="password" id="password" name="password" placeholder="Password" required>
          <img src="/img/view.png" id="eye" alt="View" width="25px" onclick="visibility()">
        </div>
        <button type="submit" class="btn">Register</button>
      </form>
  </div>
  <img src="/img/register_svg.svg" class="fillersvg" alt="">
</div>
<script>
  const pass = document.getElementById('password')
  const visibility = ()=>{
        if(pass.type == 'password'){
            pass.type = 'text'
            eye.src = '/img/not-view.png'
        } else{
            pass.type = 'password'
            eye.src = '/img/view.png'
        }
    }
</script>